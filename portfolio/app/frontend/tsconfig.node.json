{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "moduleDetection": "force",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    /* Linting */
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "vite.config.ts"
  ]
}
